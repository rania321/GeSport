      </ImageView>
      <AnchorPane layoutX="5.0" layoutY="28.0" prefHeight="775.0" prefWidth="1300.0">
         <children>
            <ImageView fx:id="imageviewR" fitHeight="464.0" fitWidth="691.0" layoutX="45.0" layoutY="202.0" pickOnBounds="true" preserveRatio="true">
